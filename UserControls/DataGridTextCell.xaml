<UserControl
    x:Class="EmployeeEditorUWP.UserControls.DataGridTextCell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EmployeeEditorUWP.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:converter="using:EmployeeEditorUWP.Converter"
    mc:Ignorable="d"
    x:Name="DataDridTextCell"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.Resources>
        <converter:InverseBooleanConverter x:Key="InverseBooleanConverter" />
    </UserControl.Resources>
    <Grid>
        <TextBox Text="{Binding Text, ElementName=DataDridTextCell}" 
                 Visibility="{Binding EditMode, ElementName=DataDridTextCell}" />
        
        <TextBlock Text="{Binding Text, ElementName=DataDridTextCell, Mode=TwoWay}" 
                   Visibility="{Binding EditMode, ElementName=DataDridTextCell, Converter={StaticResource InverseBooleanConverter}}"
                   Padding="11,6,0,0"/>
    </Grid>
</UserControl>
